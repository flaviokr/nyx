<% if @chamados_andamento.any? %>
  <ul class="listar_no_border">
    <p><strong>Chamados em andamento: </strong></p>
    <% @chamados_andamento.each do |andamento| %>
      <li>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= link_to andamento.descricao, andamento %>
            </h3>
          </div>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Subcategoria</th>
                <th>Setor</th>
                <th>Aberto em</th>
                <th>Prioridade</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= andamento.objeto.nome %></td>
                <td><%= andamento.solicitante.sector.nome %></td>
                <td><%= andamento.created_at.to_s.chomp(' -0300') %></td>
                <td>
                  <%= "Baixa" if andamento.prioridade == 'B' %>
                  <%= "Média" if andamento.prioridade == 'M' %>
                  <%= "Alta" if andamento.prioridade == 'A' %>
                  <%= "Crítica" if andamento.prioridade == 'C' %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<br>
