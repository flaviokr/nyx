<% provide(:title, 'Chamados') %>
<h1>Chamados</h1>
<%= link_to "Cadastrar novo chamado",   new_chamado_path, class: "btn btn-default subtitulo" %>
<% if @chamados_andamento.any? %>
  <ul class="listar_no_border">
    <p><strong>Chamados pendentes: </strong></p>
    <% @chamados_andamento.each do |andamento| %>
      <li>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= link_to andamento.descricao, andamento %>              
            </h3>
              <div class="botoes_glyphons">
              	<%= link_to "", edit_chamado_path(andamento), class: "botao_chamado glyphicon glyphicon-pencil btn btn-primary" %>
             	<%= link_to "", andamento, method: :delete, data: { confirm: "Tem certeza que deseja deletar este chamado?" }, class: "glyphicon glyphicon-trash btn btn-primary" %>
              </div>
          </div>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Subcategoria</th>
                <th>Setor</th>
                <th>Aberto em</th>
                <th>Prioridade</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= andamento.objeto.nome %></td>
                <td><%= andamento.solicitante.sector.nome %></td>
                <td><%= andamento.abertura.strftime("%d/%m/%y - %H:%M") %></td>
                <td>
                  <%= "Baixa" if andamento.prioridade == '1' %>
                  <%= "Média" if andamento.prioridade == '2' %>
                  <%= "Alta" if andamento.prioridade == '3' %>
                  <%= "Crítica" if andamento.prioridade == '4' %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<% if @chamados_concluido.any? %>
  <ul class="listar_no_border">
    <p><strong>Chamados concluídos: </strong></p>
    <% @chamados_concluido.each do |concluido| %>
      <li>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= link_to concluido.descricao, concluido %>
            </h3>
            <div class="botoes_glyphons">
              <%= link_to "", edit_chamado_path(concluido), class: "botao_chamado_default glyphicon glyphicon-pencil btn btn-default" %>
              <%= link_to "", concluido, method: :delete, data: { confirm: "Tem certeza que deseja deletar este chamado?" }, class: "glyphicon glyphicon-trash btn btn-default" %>
          	</div>
          </div>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Subcategoria</th>
                <th>Setor</th>
                <th>Aberto em</th>
                <th>Prioridade</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= concluido.objeto.nome %></td>
                <td><%= concluido.solicitante.sector.nome %></td>
                <td><%= concluido.abertura.to_s.chomp(' -0300') %></td>
                <td>
                  <%= "Baixa" if concluido.prioridade == '1' %>
                  <%= "Média" if concluido.prioridade == '2' %>
                  <%= "Alta" if concluido.prioridade == '3' %>
                  <%= "Crítica" if concluido.prioridade == '4' %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>