  <%= link_to "", edit_chamado_path(chamado), class: "glyphicon glyphicon-pencil btn btn-default" %>
  <%= link_to "", chamado, method: :delete, data: { confirm: "Tem certeza que deseja deletar este chamado?" }, class: "glyphicon glyphicon-trash btn btn-default" %>
