<% provide(:title, 'Chamados') %>
<h1>Chamados</h1>
<%= link_to "Cadastrar novo chamado",   new_chamado_path, class: "btn btn-default subtitulo" %>
<% if @chamados_andamento.any? %>
  <ul class="listar_no_border">
    <p><strong>Chamados em andamento: </strong></p>
    <% @chamados_andamento.each do |andamento| %>
      <li>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= link_to andamento.descricao, andamento %>
              <%= link_to "", edit_chamado_path(andamento), class: "botao_chamado glyphicon glyphicon-pencil btn btn-primary" %>
              <%= link_to "", andamento, method: :delete, data: { confirm: "Tem certeza que deseja deletar este chamado?" }, class: "botao_chamado glyphicon glyphicon-trash btn btn-primary" %>
            </h3>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Subcategoria</th>
                <th>Setor</th>
                <th>Aberto em</th>
                <th>Prioridade</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= andamento.objeto.nome %></td>
                <td><%= andamento.solicitante.sector.nome %></td>
                <td><%= andamento.created_at.to_s.chomp(' -0300') %></td>
                <td><%= andamento.prioridade %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
