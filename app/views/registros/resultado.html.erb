<div style="text-align: center">
  <a class="btn btn-primary noPrint" href="#" onclick="window.print();return false;">Imprimir Página</a>
  <%= link_to "Voltar", registros_path, class: "btn btn-primary noPrint" %>
</div>
<div class="row">
  <div class="col-md-6">
    <h3><%= @user.name %></h3>
    <h4><%= @user.rf %></h4>
  </div>
  <div class="col-md-1 col-md-offset-5">
    <h3><%= @ano %></h3>
    <h4><%= traduz(Date::MONTHNAMES[@mes.to_i]) %></h4>
  </div>
</div>

<div>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Data</th>
        <th>Entrada</th>
        <th>Saída</th>
        <th>Chamados atendidos nesta sessão</th>
        <th>Chamados acumulados no mês</th>
        <th>Média de chamados por sessão</th>
      </tr>
    </thead>
    <tbody>
      <% if @registros.any? %>
        <% cont = 0.0 %>
        <% linha = 1.0 %>
        <% @registros.each do |r|  %>
          <% cont = cont + r.n_chamados %>
          <tr>
            <td><%= r.created_at.strftime("%d/%m/%y") %></td>
            <td><%= r.created_at.strftime("%H:%M") %></td>
            <% if r.updated_at == r.created_at %>
              <td>---</td>
            <% elsif r.updated_at == Time.at(0) %>
              <td>Não fez logout</td>
            <% else %>
              <td><%= r.updated_at.strftime("%H:%M")%></td>
            <% end %>
            <td><%= r.n_chamados %></td>
            <td><%= cont.to_i %></td>
            <td><%= (cont / linha).round(2) %></td>
          </tr>
          <% linha = linha + 1.0 %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

