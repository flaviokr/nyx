<% provide(:title, 'Solicitantes') %>
<h1>Solicitantes</h1>
<%= link_to "Cadastrar novo solicitante",   new_solicitante_path, class: "btn btn-default subtitulo" %>
<ul class="listar">
  <p><strong>Solicitantes: </strong></p>
  <% @solicitantes.each do |solicitante| %>
    <li>
      <%= link_to solicitante.nome, solicitante %>
      | <%= link_to "editar", edit_solicitante_path(solicitante) %>
      <% if admin? %>
        | <%= link_to "deletar", solicitante, method: :delete, data: { confirm: "Tem certeza que deseja deletar este solicitante?" } %>
      <% end %>
    </li>
  <% end %>
</ul>