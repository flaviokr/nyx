<% provide(:title, @solicitante.nome) %>

<% if admin? %>
  <p style="float: right;">
    <%= link_to "Editar", edit_solicitante_path(@solicitante), class: "btn btn-default" %>
    <%= link_to "Deletar", @solicitante, method: :delete, data: { confirm: "Tem certeza que deseja deletar este solicitante?" }, class: "btn btn-default" %>
  </p>
<% end %>

<p><strong>Nome: </strong><%= @solicitante.nome %></p>
<p><strong>Setor: </strong><%= link_to @solicitante.sector.nome, @solicitante.sector %></p>
<p><strong>RF: </strong><%= @solicitante.rf %></p>
<p><strong>Email: </strong><%= @solicitante.email %></p>
<p><strong>Ramal: </strong><%= @solicitante.ramal %></p>
