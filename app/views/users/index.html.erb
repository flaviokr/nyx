<% provide(:title, 'Técnicos') %>
<h1>Técnicos</h1>
<%= link_to "Cadastrar novo técnico", signup_path, class: "btn btn-default subtitulo" %>
<ul class="listar">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user, class: "btn btn-default" %>
      <%= link_to "", edit_user_path(user), class: "glyphicon glyphicon-pencil btn btn-default" %>
      <% if admin? && !current_user?(user) %>
        <%= link_to "", user, method: :delete, data: { confirm: "Tem certeza que deseja deletar este técnico?" }, class: "glyphicon glyphicon-trash btn btn-default" %>
      <% end %>
    </li>
  <% end %>
</ul>