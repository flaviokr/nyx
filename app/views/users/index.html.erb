<% provide(:title, 'Técnicos') %>
<h1>Técnicos</h1>

<ul class="listar">
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      | <%= link_to "editar", edit_user_path(user) %>
      <% if admin? && !current_user?(user) %>
        | <%= link_to "deletar", user, method: :delete, data: { confirm: "Tem certeza que deseja deletar este técnico?" } %>
      <% end %>
    </li>
  <% end %>
</ul>