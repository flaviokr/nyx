<% provide(:title, 'Registrar Técnico') %>
<h1 style="margin-left: 110px;">Registrar Técnico</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-4">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :rf, "RF" %>
      <%= f.text_field :rf, class: 'form-control' %>

      <%= f.label :email, "Endereço de email" %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :celular, "Número do celular"%>
      <%= f.phone_field :celular, class: 'form-control' %>
      
      <%= f.label :comunicador, "Número do comunicador"%>
      <%= f.phone_field :comunicador, class: 'form-control' %>

      <%= f.label :admin, class: "checkbox inline" do %>
        É administrador?&nbsp;&nbsp;
        <%= f.check_box :admin %>
      <% end %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirme a senha" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Criar Técnico", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>