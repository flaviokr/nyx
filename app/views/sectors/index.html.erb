<% provide(:title, 'Setores') %>
<h1>Setores</h1>
<%= link_to "Cadastrar novo setor",   new_sector_path, class: "btn btn-default subtitulo" %>
<ul class="listar">
  <% @sectors.each do |sector| %>
    <li>
      <%= link_to sector.nome, sector, class: "btn btn-default" %>
      <%= link_to "", edit_sector_path(sector), class: "glyphicon glyphicon-pencil btn btn-default" %>
      <% if admin? %>
        <%= link_to "", sector, method: :delete, data: { confirm: "Tem certeza que deseja deletar este setor?" }, class: "glyphicon glyphicon-trash btn btn-default" %>
      <% end %>
    </li>
  <% end %>
</ul>