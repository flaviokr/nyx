<% provide(:title, 'Setores') %>
<h1>Setores</h1>
<%= link_to "Cadastrar novo setor",   new_sector_path, class: "btn btn-default subtitulo" %>
<ul class="listar">
  <p><strong>Setores: </strong></p>
  <% @sectors.each do |sector| %>
    <li>
      <%= link_to sector.nome, sector %>
      | <%= link_to "editar", edit_sector_path(sector) %>
      <% if admin? %>
        | <%= link_to "deletar", sector, method: :delete, data: { confirm: "Tem certeza que deseja deletar este setor?" } %>
      <% end %>
    </li>
  <% end %>
</ul>